<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VGroup"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/display_result_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:textSize="@dimen/font_size_mini_display" />

    <TextView
        android:id="@+id/display_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/display_result_mini"
        android:gravity="right"
        android:text="@string/zero"
        android:textSize="@dimen/font_size_display" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/display_result"
        android:layout_marginTop="34dp"
        android:background="@color/Black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/first_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <Button
                    android:id="@+id/BackSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/BackSpace"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />


                <Button
                    android:id="@+id/C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/C"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/PlusMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/PlusMinus"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/second_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_line"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/seven"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/eight"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/nine"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_line"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/four"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/five"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/six"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/fourth_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_line"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/one"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/two"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/three"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />
            </LinearLayout>


            <LinearLayout
                android:weightSum="3"
                android:id="@+id/fifth_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourth_line"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/zero"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />



                <Button
                    android:id="@+id/Equals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:minWidth="@dimen/button_min_width"
                    android:onClick="buttonClick"
                    android:text="@string/Equals"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_buttons" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:elevation="10dp"
        android:id="@+id/all_operators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_result"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="buttonClick"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/Subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="buttonClick"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:gravity="center"
                android:id="@+id/Multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="buttonClick"
                android:text="x"
                android:textColor="@android:color/white"
                android:textSize="40sp" />

            <Button
                android:id="@+id/Divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="buttonClick"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="45sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>